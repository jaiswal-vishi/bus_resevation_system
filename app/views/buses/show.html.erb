<div class="container pt-4 pb-4">
  <div class="d-flex align-items-center justify-content-between">
    <h4>Book Your seat here...</h4>
    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
  </div>
  <hr>
  <div class="row">
    <!-- ab = <%# @bus.&no_of_seats%> -->
    <%1.upto(20) do |a| %>
      <div class="col-md-3">
        <div class="text-center">
          <i class="fas fa-couch"></i>
          <i class="fas fa-couch" style="color: red <%#= couch_selected ? 'red' : 'inherit' %>"></i>
          <p style="font-size: 10px;color: gray;"><%= a %></p>
        </div>
      </div>
    <% end %>
  </div>
  <hr>
  <div class="d-flex align-items-center justify-content-between">
    <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Close</button>
    <button type="button" id="busModal" class="btn btn-primary float-end" data-bs-toggle="modal" data-bs-target="#myModal" data-bus-id="<%= @bus&.id %>" data-user-id="<%= current_user&.id %>" onclick="bookSeat()">Book Your Seat</button>

  </div>
</div>
